---
import { ViewTransitions } from "astro:transitions"

interface Props {
	title: string
}
const { title } = Astro.props
---

<!doctype html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body
		class="max-w-[1200px] lg:flex-row lg:gap-16 h-screen grid grid-rows-[auto_1fr] lg:grid-rows-none lg:grid-cols-4 m-auto px-4 py-4 lg:py-8 bg-neutral-50 dark:bg-black dark:text-neutral-300"
	>
		<div>
			<slot />
		</div>
		<div class="lg:col-span-3 h-full grid overflow-auto">
			<slot name="editor" />
		</div>
		<style is:global>
			a {
				@apply hover:bg-neutral-200 rounded transition -mx-1 px-1 -my-[2px] py-[2px] dark:hover:bg-neutral-800 box-decoration-clone;
			}
			button {
				@apply border-neutral-500 border rounded transition px-2 py-1 hover:bg-neutral-200 dark:hover:bg-neutral-800;
			}
			::-webkit-scrollbar {
				width: 8px;
				height: 8px;
			}
			::-webkit-scrollbar-thumb {
				@apply rounded-full bg-neutral-200 hover:bg-neutral-300 active:bg-neutral-400 dark:bg-neutral-800 px-2 dark:hover:bg-neutral-700 dark:active:bg-neutral-600 hover:cursor-grab active:cursor-grabbing;
			}
			::-webkit-scrollbar-track {
				@apply bg-transparent;
			}
		</style>
	</body>
</html>
